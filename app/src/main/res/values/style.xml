<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="IconButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/_40dp</item>
        <item name="android:layout_height">@dimen/_40dp</item>
        <item name="android:layout_marginVertical">@dimen/_8dp</item>
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="android:tint">@color/white</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="TitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="TitleTextView.ImageCount">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/color_second_hint</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


    <style name="TitleTabTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_hint</item>
        <item name="android:padding">@dimen/_8dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="TitleTabTextView.WithSecondaryColor">
        <item name="android:textColor">#52ADE9</item>
    </style>

    <style name="TitleTextView.WithTopMargin">
        <item name="android:layout_marginTop">@dimen/_16dp</item>
    </style>

    <style name="TitleTextView.WithFontFamily">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/color_hint</item>
    </style>

    <style name="HintTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_hint</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="HintTextView.WithTopMargin">
        <item name="android:layout_marginTop">@dimen/_4dp</item>
    </style>

    <style name="Images">
        <item name="android:layout_width">@dimen/_140dp</item>
        <item name="android:layout_height">@dimen/_140dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginTop">@dimen/_2dp</item>

    </style>

    <style name="Images.WithMarginHorizontal">
        <item name="android:layout_marginStart">@dimen/_2dp</item>
        <item name="android:layout_marginEnd">@dimen/_2dp</item>
    </style>

    <style name="CustomView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_1dp</item>
        <item name="android:background">@color/colorSecondaryVariant</item>
        <item name="android:layout_marginTop">@dimen/_16dp</item>
    </style>

    <style name="CustomView.WithDifferent16Height">
        <item name="android:layout_height">@dimen/_16dp</item>
        <item name="android:background">@color/colorSecondaryVariant</item>
    </style>

    <style name="CustomView.WithDifferent0Height">
        <item name="android:layout_width">@dimen/_1dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/colorSecondaryVariant</item>
        <item name="android:layout_marginVertical">@dimen/_12dp</item>
        <item name="android:layout_marginEnd">@dimen/_8dp</item>
    </style>

    <style name="ProfileImage">
        <item name="android:layout_width">@dimen/_52dp</item>
        <item name="android:layout_height">@dimen/_52dp</item>
        <item name="android:layout_marginTop">@dimen/_32dp</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="ProfileImage.WithAlph0">
        <item name="android:alpha">0</item>
    </style>

</resources>